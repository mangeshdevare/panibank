<div class="container">
    <div class="row">
			    <div class="col-lg-9">
			        <h1 class="page-header"> Users </h1>
			    </div>
			<div class="col-lg-9">
				<%= link_to new_user_path, :class => 'btn btn-info' do %>
				  <i class="fa fa-user-plus"></i>
				  Add New User
				<% end %>
				<%= link_to  import_csv_users_path, :class => 'btn btn-info', :id=> "uploadCsv" do %>
				  <i class="fa fa-upload"></i>
				  Upload Users
				<% end %>
			</div>
			<div class="col-lg-8 col-lg-offset-0 col-xs-11 col-xs-offset-1">
					<br />
					<div class="row table-responsive">
					<table class="table table-striped table-bordered table-hover">
					  <thead>
					    <tr>
					      <th>Full Name</th>
					      <th>Mobile Number</th>
					      <th>Email</th>
					      <th>Actions</th>
					    </tr>
					  </thead>
					  <% @users.each do |user| %>
					    <tr>
					      <td>
					        <%= user.full_name %>
					      </td>
					      <td>
					        <%= user.mobile_number %>
					      </td>
					      <td>
					      	<%= user.email %>
					      </td>
					      <td>
					        <%= link_to 'View', '#' %>
					        <span>/</span>
					      </td>
					    </tr>
					  <% end %>
			    	</table>
				</div>
			</div>
	</div>
</div>
